#kubectl
curl -Lo kubectl https://storage.googleapis.com/kubernetes-release/release/v1.9.2/bin/linux/amd64/kubectl && chmod +x kubectl && sudo mv kubectl /usr/local/bin/

#minikube
curl -Lo minikube https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64 && chmod +x minikube && sudo mv minikube /usr/local/bin/


#start minikube local without virtual box
minikube start --vm-driver=none

#The API server runs on 8443 by default.


sh -c "echo `minikube ip` devops.k8s

sudo sh -c "echo `minikube ip` devops.k8s >> /etc/hosts”


curl http://devops.k8s/welcome


